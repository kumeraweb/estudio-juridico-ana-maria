---
import '../styles/global.css'
import Footer from '../components/Footer.astro'
import Floating from '../components/Floating.astro'

interface Props {
  title?: string
  description?: string
  canonical?: string
}

const {
  title = 'Estudio Jurídico Ana María Erazo',
  description = 'Estudio Jurídico Ana María Erazo. Abogada especialista en derecho sucesorio, derecho de familia y derecho inmobiliario en la Región del Biobío.',
  canonical
} = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    {canonical && <link rel="canonical" href={canonical} />}

    <!-- SEO básico -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Ana María Erazo" />
    <meta name="theme-color" content="#1F3F5F" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content="es_CL" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />

    <!-- ================================
         Google Tag (gtag.js)
         Activar cuando se publique Ads
         ================================ -->
    {
      /*
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-XXXXXXXXXX');
    </script>
    */
    }

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LegalService",
        "name": "Estudio Jurídico Ana María Erazo",
        "url": "https://www.estudiojuridicoanamariera.cl/",
        "logo": "https://www.estudiojuridicoanamariera.cl/logo/lgb.png",
        "image": "https://www.estudiojuridicoanamariera.cl/logo/lgb.png",
        "description": "Estudio jurídico especializado en derecho sucesorio, derecho de familia y derecho inmobiliario en la Región del Biobío.",
        "areaServed": {
          "@type": "AdministrativeArea",
          "name": "Región del Biobío, Chile"
        },
        "address": {
          "@type": "PostalAddress",
          "addressRegion": "Biobío",
          "addressCountry": "CL"
        },
        "serviceType": ["Derecho Sucesorio", "Derecho de Familia", "Derecho Inmobiliario"],
        "founder": {
          "@type": "Person",
          "name": "Ana María Erazo Chinchón"
        }
      }
    </script>
  </head>

  <body>
    <main id="main-content" class="min-h-screen bg-white text-slate-800">
      <slot />
    </main>

    <Footer />
    <Floating />
  </body>
</html>
