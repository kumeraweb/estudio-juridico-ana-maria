---
import '../styles/global.css'
import Footer from '../components/Footer.astro'
import Floating from '../components/Floating.astro'
import ContactTracking from '../components/ContactTracking.astro'

interface Props {
  title?: string
  description?: string
  canonical?: string
  crumbs?: { label: string; href?: string }[]
}

const {
  title = 'Estudio Jurídico Ana María Erazo',
  description = 'Estudio Jurídico Ana María Erazo. Abogada especialista en derecho sucesorio, derecho de familia y derecho inmobiliario en la Región del Biobío.',
  canonical,
  crumbs = []
} = Astro.props

const navItems = [
  { label: 'Inicio', href: '/' },
  { label: 'Sobre', href: '/#sobre' },
  { label: 'Servicios', href: '/#servicios' },
  { label: 'Contacto', href: '/contacto' }
]
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    {canonical && <link rel="canonical" href={canonical} />}

    <meta name="robots" content="index, follow" />
    <meta name="author" content="Ana María Erazo" />
    <meta name="theme-color" content="#1F3F5F" />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content="es_CL" />

    <meta name="twitter:card" content="summary_large_image" />

    <script async src="https://www.googletagmanager.com/gtag/js?id=AW-17912967968" is:inline></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag('js', new Date())
      gtag('config', 'AW-17912967968')
    </script>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LegalService",
        "name": "Estudio Jurídico Ana María Erazo",
        "url": "https://www.estudiojuridicoanamarierazo.cl/",
        "logo": "https://www.estudiojuridicoanamarierazo.cl/logo/lgb.png",
        "image": "https://www.estudiojuridicoanamarierazo.cl/logo/lgb.png",
        "description": "Estudio jurídico especializado en derecho sucesorio, derecho de familia y derecho inmobiliario en la Región del Biobío.",
        "areaServed": {
          "@type": "AdministrativeArea",
          "name": "Región del Biobío, Chile"
        },
        "address": {
          "@type": "PostalAddress",
          "addressRegion": "Biobío",
          "addressCountry": "CL"
        },
        "serviceType": ["Derecho Sucesorio", "Derecho de Familia", "Derecho Inmobiliario"],
        "founder": {
          "@type": "Person",
          "name": "Ana María Erazo Chinchón"
        }
      }
    </script>
  </head>

  <body class="bg-white text-slate-800">
    <header class="sticky top-0 z-50 border-b border-slate-200 bg-white/80 backdrop-blur">
      <div class="mx-auto flex max-w-7xl items-center justify-between px-4 py-1">
        <a href="/" class="flex items-center gap-3">
          <img
            src="/logo/logo-nbg.png"
            alt="Estudio Jurídico Ana María Erazo"
            class="h-24 w-auto"
          />
        </a>

        <nav class="hidden md:flex items-center gap-8">
          {
            navItems.map((i) => (
              <a
                href={i.href}
                class="text-sm font-medium text-slate-700 transition hover:text-slate-900"
              >
                {i.label}
              </a>
            ))
          }
          <a
            href="/contacto"
            class="rounded-xl bg-[var(--color-accent-500)] px-4 py-2 text-sm font-medium text-white transition hover:bg-[var(--color-accent-600)]"
          >
            Contactar
          </a>
        </nav>

        <details class="relative md:hidden">
          <summary class="cursor-pointer rounded-lg border border-slate-300 px-3 py-2 text-sm">
            Menú
          </summary>
          <div
            class="absolute right-0 mt-2 w-48 rounded-xl border border-slate-200 bg-white p-4 shadow-lg"
          >
            {
              navItems.map((i) => (
                <a href={i.href} class="block py-2 text-sm text-slate-700 hover:text-slate-900">
                  {i.label}
                </a>
              ))
            }
            <a
              href="/contacto"
              class="mt-3 block rounded-lg bg-[var(--color-accent-500)] px-3 py-2 text-center text-sm text-white"
            >
              Contactar
            </a>
          </div>
        </details>
      </div>

      {
        crumbs.length > 0 && (
          <div class="mx-auto max-w-7xl px-4 pb-3">
            <div class="flex flex-wrap gap-2 text-xs">
              {crumbs.map((c, i) =>
                c.href ? (
                  <a
                    href={c.href}
                    class="rounded-full border border-slate-300 px-3 py-1 text-slate-600 hover:bg-slate-100"
                  >
                    {c.label}
                  </a>
                ) : (
                  <span class="rounded-full bg-slate-100 px-3 py-1 text-slate-700">{c.label}</span>
                )
              )}
            </div>
          </div>
        )
      }
    </header>

    <main id="main-content" class="min-h-screen">
      <slot />
    </main>

    <Footer />
    <Floating />
    <ContactTracking />
  </body>
</html>
